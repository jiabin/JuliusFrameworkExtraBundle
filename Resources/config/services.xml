<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="julius_framework_extra.datetimepickertype.class">Julius\FrameworkExtraBundle\Form\Type\DateTimePickerType</parameter>
    </parameters>

    <services>
        <!-- Date time picker -->
        <service id="julius_framework_extra.form.type.datetimepicker" class="%julius_framework_extra.datetimepickertype.class%">
            <tag name="form.type" alias="julius_datetimepicker" />
        </service>
        <!-- Mongo ODM param converter -->
        <service id="julius_framework_extra.converter.doctrine.mongodb" class="%sensio_framework_extra.converter.doctrine.class%">
            <tag name="request.param_converter" converter="doctrine.mongodb" />
            <argument type="service" id="doctrine_mongodb" on-invalid="ignore" />
        </service>
    </services>
</container>
